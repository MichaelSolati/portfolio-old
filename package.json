{
  "name": "ng-portfolio",
  "version": "0.0.2",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "npm run build:browser",
    "build:browser": "ng build --prod --aot",
    "build:deploy": "npm run build:browser && npm run build:universal && npm run build:functions && cp ./dist/ng-portfolio/index.html ./functions/dist/app/index.html",
    "build:functions": "cp ./src/environments/environment.ts ./functions/src/environment.ts && cd functions && npm run build",
    "build:universal": "ng run ng-portfolio:server",
    "deploy": "npm run build:deploy && firebase deploy",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "release:major": "changelog -M && git add . && git commit -m 'chore(release): major version release' && npm version major && git push origin && git push origin --tags",
    "release:minor": "changelog -m && git add . && git commit -m 'chore(release): minor version release' && npm version minor && git push origin && git push origin --tags",
    "release:patch": "changelog -p && git add . && git commit -m 'chore(release): patch version release' && npm version patch && git push origin && git push origin --tags",
    "postinstall": "npm --prefix ./functions install ./functions"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.9",
    "@angular/cdk": "^6.4.7",
    "@angular/common": "^6.1.9",
    "@angular/compiler": "^6.1.9",
    "@angular/core": "^6.1.9",
    "@angular/forms": "^6.1.9",
    "@angular/http": "^6.1.9",
    "@angular/material": "^6.4.7",
    "@angular/platform-browser": "^6.1.9",
    "@angular/platform-browser-dynamic": "^6.1.9",
    "@angular/platform-server": "^6.1.9",
    "@angular/router": "^6.1.9",
    "@nguniversal/module-map-ngfactory-loader": "^6.1.0",
    "bootstrap": "^4.1.3",
    "core-js": "^2.5.4",
    "ngmeta": "^6.0.0",
    "normalizecss": "^3.0.0",
    "rxjs": "^6.0.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.7.0",
    "@angular/cli": "~6.1.2",
    "@angular/compiler-cli": "^6.1.0",
    "@angular/language-service": "^6.1.0",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.2.1",
    "firebase-tools": "^5.0.1",
    "generate-changelog": "^1.7.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.3.0",
    "ts-node": "~8.2.0",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2"
  }
}
